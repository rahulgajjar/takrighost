<header class="post-header">
    {{#if show_tags}}
        {{#if tags}}
            <div class="post-tags">
                {{#foreach tags}}
                    <a class="post-tag post-tag-{{slug}}" href="{{url}}"
                        title="{{name}}">{{name}}</a>
                {{/foreach}}
            </div>
        {{/if}}
    {{/if}}
    {{#if single}}
        <h1 class="post-title">{{title}}</h1>
        {{> post-meta}}
    {{else}}
        {{> post-meta}}
        <{{tag}} class="post-title">
            <a class="post-title-link" href="{{url}}">{{title}}</a>
        </{{tag}}>
    {{/if}}
</header>